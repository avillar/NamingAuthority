    prof:hasToken  "jsonschema"^^xsd:token ;
    rdfs:label "JSON schema";
     rdfs:comment "Expression of a data model as a JSON schema document";
         prof:requiresFormat "application/json" ;
     .
     
profiles:json_ld_context
   a prof:Profile ;
